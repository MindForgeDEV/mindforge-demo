# MindForge Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files with real secrets to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection
POSTGRES_USER=mindforge_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=mindforge
POSTGRES_PORT=5432

# Spring DataSource URL (for production)
# Format: jdbc:postgresql://host:port/database
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/mindforge

# =============================================================================
# APPLICATION PORTS
# =============================================================================

# Backend API Port
BACKEND_PORT=8080

# Frontend Port
FRONTEND_PORT=80

# Development server port (when running locally)
SERVER_PORT=8081

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT Secret Key (must be at least 32 characters)
# Generate a secure random string for production
JWT_SECRET=verylongrandomstringwithatleast32charactersforjwttesting!!!

# JWT Token Expiration (in milliseconds)
# Default: 1 hour = 3600000ms
JWT_EXPIRATION=3600000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend URL (used by backend for CORS, redirects, etc.)
FRONTEND_URL=http://localhost:3000

# API Base URL for frontend (Vite environment variable)
# For development: http://localhost:8081
# For production with docker: http://backend:8080
VITE_API_URL=http://localhost:8081

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Spring Profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev

# Enable debug logging in development
DEBUG=true

# =============================================================================
# PRODUCTION SECURITY
# =============================================================================

# SSL/TLS Settings (for production)
SSL_ENABLED=false
SSL_KEY_STORE=
SSL_KEY_STORE_PASSWORD=

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Application Insights/Monitoring
APPLICATION_INSIGHTS_ENABLED=false
APPLICATION_INSIGHTS_KEY=

# Log Level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# EMAIL CONFIGURATION (for future features)
# =============================================================================

# SMTP Configuration (for password reset, notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@mindforge.com

# =============================================================================
# EXTERNAL SERVICES (for future features)
# =============================================================================

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Redis (for caching)
REDIS_URL=
REDIS_PASSWORD=

# CDN Configuration
CDN_URL=
CDN_ENABLED=false
